# MongoDB Atlas Connection String (same URI as cos/bwws - credentials only)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bwws?appName=Cluster

# Separate database for invcaa (avoids nin index conflicts with cos users collection)
MONGODB_DB=invcaa

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Port (optional, defaults to 3000)
PORT=3000

# Allowed Origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://acc.iges.ug,http://acc.iges.ug

# Auto-seed admin/manager on first deploy (optional - uses these if no users exist)
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=admin123
INITIAL_MANAGER_USERNAME=manager
INITIAL_MANAGER_PASSWORD=manager123

# Node Environment
NODE_ENV=production
